{
  "min_packer_version": "1.2.1",
  "variables": {
    "docker_registry_username": "{{env `DOCKER_REGISTRY_USERNAME`}}",
    "docker_registry_password": "{{env `DOCKER_REGISTRY_PASSWORD`}}",
    "docker_registry_address": "{{env `DOCKER_REGISTRY_ADDRESS`}}",
    "ansible_host": "default",
    "ansible_connection": "docker"
  },
  "builders": [
    {
      "type": "docker",
      "name": "docker",
      "image": "ubuntu:16.04",
      "commit": true,
      "run_command": [
        "-d",
        "-i",
        "-t",
        "--name",
        "{{user `ansible_host`}}",
        "{{.Image}}",
        "/bin/bash"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-get update",
        "DEBIAN_FRONTEND=noninteractive apt-get install -y -q --no-install-recommends python"
      ],
      "only": ["docker"]
    },
    {
      "type": "ansible",
      "user": "root",
      "playbook_file": "./provisioning/playbook.yml",
      "extra_arguments": [
        "--extra-vars",
        "ansible_host={{user `ansible_host`}} ansible_connection={{user `ansible_connection`}}"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "dhutton/immute",
        "tag": "0.0"
      },
      {
        "type": "docker-push",
        "login": true,
        "login_username": "{{user `docker_registry_username`}}",
        "login_password": "{{user `docker_registry_password`}}",
        "login_server": "{{user `docker_registry_address`}}"
      }
    ]
  ]
}